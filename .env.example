
# FastAPI config
LOG_LEVEL=info
API_PREFIX=/api
HOST=0.0.0.0
PORT=8000

# STT (faster-whisper)
STT_MODEL=tiny
STT_DEVICE=cpu            # cpu or cuda
STT_COMPUTE_TYPE=int8     # fp16, int8, int8_float16 etc

# Piper TTS
PIPER_PATH=/usr/local/bin/piper           # path to piper binary
PIPER_MODEL=/models/ko_KR-kss-low.onnx   # path to model (example: Korean)
PIPER_SPEAKER=0

# CREPE (optional pitch via ONNXRuntime)
CREPE_ONNX_PATH=./models/crepe-tiny.onnx
